@model Requisition

@{
    ViewData["Title"] = "Details";

    ViewData["Title"] = "Requisition Details";
    ViewData["open_menu"] = "requisition";
    ViewData["active_option"] = "requisition_list";
    ViewData["page_name"] = "Requisition Details";

    var sl = 1;
}

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RefNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RefNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedOn)
        </dd>
    </dl>


    <table class="table table-bordered table-striped table-sm table-hover">
        <thead>
            <tr>
                <th>Sl</th>
                
                <th>
                    Line Ref #    
                </th>
                
                <th>
                    Item Description
                </th>
                <th>
                    Quantity                
                </th>
                <th>
                    
                </th>
                
            </tr>
        </thead>
        <tbody
            @foreach (var requistionItem in Model.RequisitionItems)
            {
                <tr>
                    <td>@sl</td>

                    <td>
                        @requistionItem.LineRef
                    </td>

                    <td>
                        @Html.Raw(requistionItem.ItemDescription)
                    </td>
                    <td>
                        @requistionItem.Quantity (@requistionItem.Item?.Unit?.Symbol)
                    </td> 
                   
                </tr>

                sl = sl + 1;
            }
        </tbody>
    </table>


</div>
