@if (ViewData["isBreadcumNotVisible"] == null)
{
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-0">
                <div class="col-sm-6">
                    <h4 class="m-0 text-dark">
                        @if (ViewData["page_name"] != null)
                        {
                            @ViewData["page_name"]
                        }
                    </h4>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">
                            @if (ViewData["page_name"] != null)
                            {
                                @ViewData["page_name"]
                            }
                        </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
}
